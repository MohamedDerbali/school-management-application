                        {{ form_label(form.titrebook,'Name :') }}
                        {{ form_widget(form.titrebook,{'attr': {'class':'form-control'}}) }}

                    </div>
                    <div class="form-group">
                        {{ form_label(form.descriptionbook,'Description :') }}
                        {{ form_widget(form.descriptionbook,{'attr': {'class':'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.etatbook,'Status :') }}
                        {{ form_widget(form.etatbook,{'attr': {'class':'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.categoriebook,'Categorie :') }}
                        {{ form_widget(form.categoriebook,{'attr': {'class':'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form)}}


                    </div>
                    <div class="row">
                        <div class="col-sm-6 pl-0">
                            <p class="text-right">

                                {{ form_end(form) }}
                            </p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
