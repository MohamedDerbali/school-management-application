{% extends 'backoffice.html.twig' %}

{% block body %}
    <h1>Book edit</h1>
    {{ form_start(edit_form,{'attr': {'novalidate': 'novalidate'}}) }}
    <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header">Basic Form</h5>
            <div class="card-body">
                <form action="#" id="basicform" data-parsley-validate="">
                    <div class="form-group">
                        {{ form_label(edit_form.titrebook,'Name :') }}
                        {{ form_widget(edit_form.titrebook,{'attr': {'class':'form-control'}}) }}

                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.descriptionbook,'Description :') }}
                        {{ form_widget(edit_form.descriptionbook,{'attr': {'class':'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.etatbook,'Status :') }}
                        {{ form_widget(edit_form.etatbook,{'attr': {'class':'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.categoriebook,'Categorie :') }}
                        {{ form_widget(edit_form.categoriebook,{'attr': {'class':'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(edit_form)}}
                        {{ form_end(edit_form) }}
                        {{ form_start(delete_form) }}
                        <button type="submit" value="Delete" class="btn btn-space btn-secondary">Delete</button>
                        {{ form_end(delete_form) }}
                    </div>
                    <div class="row">
                        <div class="col-sm-6 pl-0">
                            <p class="text-right">


                            </p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
