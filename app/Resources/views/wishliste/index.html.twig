{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <h1>My Wishliste </h1><br>
            <table class="table table-hover table-striped">
                <thead>
                <tr class="thead-dark">
                    <th>S. #</th>
                    <th>Title & Discription</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for Key,wishliste in wishlistes %}
                    <tr>
                        <td>
                            {{ Key+1 }}
                        </td>
                        <td style="max-width:300px">
                            <h6>{{ wishliste.idbook.titrebook }}</h6>
                            <em class="text-muted">
                                {{ wishliste.idbook.descriptionbook }}                       </em>
                        </td>
                        <td>
                            {{ wishliste.idbook.etatbook }}
                        </td>
                        <td>

                            <a href="{{ path('wishliste_delete', { 'idbook':  wishliste.idlist}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>

                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
